<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".presentation.activities.ArticleActivity"
android:orientation="vertical">

<ImageView
    android:id="@+id/news_photo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_image_layout_height"
    android:scaleType="centerCrop"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/ic_launcher_background" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ui_spacing_single"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/news_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Orest"
        android:layout_marginBottom="@dimen/ui_spacing_single"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:layout_marginBottom="@dimen/ui_spacing_single"/>

    <TextView
        android:id="@+id/news_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Description"
        android:layout_marginBottom="@dimen/ui_spacing_single"/>

    <TextView
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Content"
        android:layout_marginBottom="@dimen/ui_spacing_single"/>
</LinearLayout>

</LinearLayout>